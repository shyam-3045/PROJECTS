          />
          <div class="container">
            <div class="carousel-caption text-start">
              <h1 class="fw-normal text-white">Advanced Facilities</h1>
              <p class="text-white">
                Equipped with state-of-the-art technology for accurate
                diagnostics.
              </p>
              <p>
                <a class="btn btn-lg btn-primary" href="#">View Services</a>
              </p>
            </div>
          </div>
        </div>

        <!-- Slide 3 -->
        <div class="carousel-item">
          <img
            src="https://images.squarespace-cdn.com/content/v1/5aa96c579772aea9adaa2ef7/1582027955350-MTS6I1CK13E4NRBQFXQ5/HospitalWaitingRooms_Bad1_220.jpg"
            class="d-block w-100"
            alt="Slide 3"
          />
          <div class="container">
            <div class="carousel-caption text-end">
              <h1 class="fw-normal text-white">24/7 Emergency Care</h1>
              <p class="text-white">
                Your health is our priority, any time, any day.
              </p>
              <p><a class="btn btn-lg btn-primary" href="#">Contact Us</a></p>
            </div>
          </div>
        </div>
      </div>

      <!-- Carousel Controls -->
