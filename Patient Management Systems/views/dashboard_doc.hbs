    const editFromViewBtn = document.getElementById('edit-from-view');
    const modalTitle = document.getElementById('modal-title');
    const recordForm = document.getElementById('record-form');
    
    // Show add record modal
    if (addRecordBtn) {
        addRecordBtn.addEventListener('click', function() {
            modalTitle.textContent = 'Add Medical Record';
            recordForm.reset();
            document.getElementById('record-id').value = '';

            recordModal.style.display = 'block';
        });
    }
    
    // Close modals
    if (closeModalBtn) {
        closeModalBtn.addEventListener('click', function() {
            recordModal.style.display = 'none';
        });
    }
    
    if (closeViewModalBtn) {
        closeViewModalBtn.addEventListener('click', function() {
            viewRecordModal.style.display = 'none';
        });
    }
    
    if (cancelRecordBtn) {
        cancelRecordBtn.addEventListener('click', function() {
            recordModal.style.display = 'none';
        });
    }
    
    if (closeViewBtn) {
        closeViewBtn.addEventListener('click', function() {
            viewRecordModal.style.display = 'none';
        });
    }
    
    // Edit record button event
    const editBtns = document.querySelectorAll('.edit-record');
    editBtns.forEach(btn => {
        btn.addEventListener('click', function() {
            const recordId = this.getAttribute('data-id');
            modalTitle.textContent = 'Edit Medical Record';
            
            // Fetch record data and populate form (in a real app, this would be an AJAX call)
            // For demo, we'll simulate getting data from the table row
            const row = this.closest('tr');
            document.getElementById('record-id').value = recordId;
            document.getElementById('patient-id').value = row.cells[1].textContent;
            document.getElementById('record-date').value = formatDateForInput(row.cells[2].textContent);
            document.getElementById('diagnosis').value = row.cells[3].textContent;
            document.getElementById('prescriptions').value = row.cells[4].textContent;
            // Notes would need to be fetched from backend as they're not displayed in the table
            
            recordModal.style.display = 'block';
        });
    });
    
    // View record button event
    const viewBtns = document.querySelectorAll('.view-record');
    viewBtns.forEach(btn => {
        btn.addEventListener('click', function() {
            const recordId = this.getAttribute('data-id');
            
            // Fetch record data and populate view (in a real app, this would be an AJAX call)
            // For demo, we'll simulate getting data from the table row
            const row = this.closest('tr');
            document.getElementById('view-record-id').textContent = recordId;
            document.getElementById('view-patient-id').textContent = row.cells[1].textContent;
            document.getElementById('view-date').textContent = row.cells[2].textContent;
            document.getElementById('view-diagnosis').textContent = row.cells[3].textContent;
            document.getElementById('view-prescriptions').textContent = row.cells[4].textContent;
            document.getElementById('view-notes').textContent = row.cells[5].textContent; // This would come from backend
            
            viewRecordModal.style.display = 'block';
        });
    });
    
    // Edit from view button
    if (editFromViewBtn) {
        editFromViewBtn.addEventListener('click', function() {
            const recordId = document.getElementById('view-record-id').textContent;
            viewRecordModal.style.display = 'none';
            
            // Simulate clicking the edit button for this record
            document.querySelector(`.edit-record[data-id="${recordId}"]`).click();
        });
    }
    
    // Close modals when clicking outside
    window.addEventListener('click', function(event) {
        if (event.target === recordModal) {
            recordModal.style.display = 'none';
        }
        if (event.target === viewRecordModal) {
            viewRecordModal.style.display = 'none';
        }
    });
    
    // Helper function to format date for input
    function formatDateForInput(dateString) {
        const date = new Date(dateString);
        return date.toISOString().split('T')[0];
    }
});
        document.addEventListener('DOMContentLoaded', function() {
            // Get all menu items
            const menuItems = document.querySelectorAll('.menu-item');
            
            // Get all tab contents
            const tabContents = document.querySelectorAll('.tab-content');
            
            // Get page title element
            const pageTitle = document.getElementById('pageTitle');
            
            // Add click event to each menu item (except logout)
            menuItems.forEach(item => {
                if (item.id !== 'logout') {
                    item.addEventListener('click', function() {
                        // Remove active class from all menu items
                        menuItems.forEach(mi => mi.classList.remove('active'));
                        
                        // Add active class to clicked menu item
                        this.classList.add('active');
                        
                        // Get the tab name
                        const tabName = this.getAttribute('data-tab');
                        
                        // Hide all tab contents
                        tabContents.forEach(tab => tab.classList.remove('active'));
                        
                        // Show the selected tab content
                        document.getElementById(tabName + '-content').classList.add('active');
                        
                        // Update page title
                        pageTitle.textContent = this.querySelector('.menu-text').textContent;
                    });
                }
            });
            

