                </div>
            </div>
            <!-- Patients Tab Content -->
<div class="tab-content" id="patients-content">
    <div class="card">
        <div class="section-header">
            <h2 class="section-title">Patient Management</h2>
        </div>
        
        <!-- Patients Table -->
        <div class="table-responsive">
            <table>
                <thead>
                    <tr>
                        <th>Patient ID</th>
                        <th>Name</th>
                        <th>Age</th>
                        <th>Gender</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each patients}}
                    <tr>
                        <td>{{this.Patient_ID}}</td>
                        <td>{{this.Name}}</td>
                        <td>{{this.Age}}</td>
                        <td>{{this.Gender}}</td>
                        <td>{{this.Phone}}</td>
                        <td>{{this.Email}}</td>
                        <td class="action-buttons">
                            <button class="btn btn-primary view-patient" data-id="{{this.Patient_ID}}">View</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Add/Edit Patient Modal -->
    <div id="patient-modal" class="modal" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0,0,0,0.5); z-index: 100;">
        <div class="modal-content" style="background-color: white; margin: 10% auto; padding: 20px; width: 60%; max-width: 600px; border-radius: 8px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
            <div class="modal-header" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                <h3 id="patient-modal-title">Add New Patient</h3>
                <span id="close-patient-modal" style="cursor: pointer; font-size: 24px;">&times;</span>
            </div>
            <form id="patient-form" action="/save_patient" method="POST">
                <input type="hidden" id="patient-id-input" name="Patient_ID">
                <div class="form-group">
                    <label for="patient-name">Full Name:</label>
                    <input type="text" id="patient-name" name="Name" class="form-control" required>
                </div>
                <div class="form-group" style="display: flex; gap: 20px;">
                    <div style="flex: 1;">
                        <label for="patient-age">Age:</label>
                        <input type="number" id="patient-age" name="Age" class="form-control" required>
                    </div>
                    <div style="flex: 1;">
                        <label for="patient-gender">Gender:</label>
                        <select id="patient-gender" name="Gender" class="form-control" required>
                            <option value="">Select Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="patient-phone">Phone:</label>
                    <input type="tel" id="patient-phone" name="Phone" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="patient-email">Email:</label>
                    <input type="email" id="patient-email" name="Email" class="form-control">
                </div>
                <div class="form-group">
                    <label for="patient-address">Address:</label>
                    <textarea id="patient-address" name="Address" class="form-control" rows="2"></textarea>
                </div>
                <div class="form-group">
                    <label for="patient-medical-history">Medical History:</label>
                    <textarea id="patient-medical-history" name="MedicalHistory" class="form-control" rows="3"></textarea>
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Save Patient</button>
                    <button type="button" id="cancel-patient" class="btn btn-outline">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <!-- View Patient Modal -->
    <div id="view-patient-modal" class="modal" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0,0,0,0.5); z-index: 100;">
        <div class="modal-content" style="background-color: white; margin: 10% auto; padding: 20px; width: 60%; max-width: 600px; border-radius: 8px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
            <div class="modal-header" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                <h3>Patient Details</h3>
                <span id="close-view-patient-modal" style="cursor: pointer; font-size: 24px;">&times;</span>
            </div>
            <div class="patient-details">
                <div class="profile-info-row">
                    <div class="profile-label">Patient ID:</div>
                    <div class="profile-value" id="view-patient-id"></div>
                </div>
                <div class="profile-info-row">
                    <div class="profile-label">Name:</div>
                    <div class="profile-value" id="view-patient-name"></div>
                </div>
                <div class="profile-info-row">
                    <div class="profile-label">Age:</div>
                    <div class="profile-value" id="view-patient-age"></div>
                </div>
                <div class="profile-info-row">
                    <div class="profile-label">Gender:</div>
                    <div class="profile-value" id="view-patient-gender"></div>
                </div>
                <div class="profile-info-row">
                    <div class="profile-label">Phone:</div>
                    <div class="profile-value" id="view-patient-phone"></div>
                </div>
                <div class="profile-info-row">
                    <div class="profile-label">Email:</div>
                    <div class="profile-value" id="view-patient-email"></div>
                </div>
                <div class="profile-info-row">
                    <div class="profile-label">Address:</div>
                    <div class="profile-value" id="view-patient-address"></div>
                </div>
                <div class="profile-info-row">
                    <div class="profile-label">Medical History:</div>
                    <div class="profile-value" id="view-patient-medical-history"></div>
                </div>
                <div class="profile-info-row">
                    <div class="profile-label">Last Visit:</div>
                    <div class="profile-value" id="view-patient-last-visit"></div>
                </div>
            </div>
            <div class="form-actions">
                <button id="edit-from-view-patient" class="btn btn-primary">Okay</button>
            </div>
        </div>
    </div>
