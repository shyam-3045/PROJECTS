                            <h2 class="section-title">Recent Patients</h2>
                        </div>
                        <div class="card">
                            {{#each patients}}

                            <div class="patient-info">
                                <div class="patient-avatar">🤕</div>
                                <div>
                                    <div class="patient-name">{{this.Name}}</div>
                                    <div class="patient-details">{{this.Gender}} • 18 yrs • {{this.Health_Conditions}} • {{this.Phone}}</div>
                                </div>
                            </div>
                            {{/each}}
