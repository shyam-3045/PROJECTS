                                            <td>{{this.Patient_ID}}</td>
                                            <td>{{this.AppointmentType}}</td>
                                            <td>{{this.Date}}</td>
                                            <td>{{this.Time}}</td>
                                            <td>{{this.PatientReason}}</td>
                                        
